　<h2><%= @book.errors.count %>errors prohibited this obj from being saved:</h2><br>
  <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
  <% end %>
 <% end %>
<div class ="container">
	<div class ="row">
		<div class ="col-xs-3">
          <%= render 'books/list', book: @book, user: @user %>
        </div>
        <div class="col-xs-9">

			<h1 class=>Books</h1>
				<table class="table table-striped">
					<thead>
						<tr>
							<th></th>
							<th>Title</th>
							<th>Opinion</th>
						</tr>
					</thead>
						<% @books.each do |book| %>
							<tbody>
								<tr>
									<td>
										<%= link_to user_path(book.user_id), class: " user_#{book.user_id}" do %>
											<%= attachment_image_tag book.user, :profile_image,  :fill, 60, 60, fallback: "no_image.jpg", class: "bookimage img pull-left profile-thumb"%>
										<% end %>
									</td>
									<td><%= link_to book.title,book_path(book.id) %></td>
									<td><%= book.body%></td>
									<td id="likes_buttons_<%= book.id %>">
										<%= render partial: "books/like" , locals: {book: book}%>
									</td>
										<td>
											<p class="comment-count"><%= book.post_comments.count %>件コメント</p>
										</td>
								</tr>
							</tbody>
						<% end %>
				</table>

        </div>
    </div>
</div>